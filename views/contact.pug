extends base.pug
block style 
    style
        include ../static/style.css
        include ../static/stylecontact.css

block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="post" class="myform") 
            input(type="text", class="myinput", name="name", placeholder="Enter your name" )
            input(type="phone", class="myinput", name="phone", placeholder="Enter your phone Number" )
            input(type="email", class="myinput", name="email", placeholder="Enter your email" )
            input(type="textarea", class="myinput", name="address", placeholder="Enter your address" )
            input(type="text", class="myinput", name="concern", placeholder="Enter your concern" )
            button(class="btn")
                | Submit